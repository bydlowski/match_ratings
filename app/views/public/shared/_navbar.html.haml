.clearfix
  .col.xs-col-10.xs-p2.xs-border-bottom.xs-fixed.xs-z1{style:'height:70px;background: rgba(0, 0, 0, 0.4);min-width:750px;'}
    .col.xs-col-4
      = link_to root_path do
        = content_tag :span, "", class: 'link-white bold caps' do
          %p{class: 'xs-text-1 xs-inline-block', style:'letter-spacing: -3px;'}= 'M' 
          %p{class: 'xs-text-2 xs-inline-block'}= 'atch'
          %p{class: 'xs-text-1 xs-inline-block', style:'letter-spacing: -3px'}= 'R'
          %p{class: 'xs-text-2 xs-inline-block'}= 'ating'
    .col.xs-col-2
      /= params
    - if params[:action] == 'show'
      .col.xs-col-5.xs-float-right.caps.xs-text-6.xs-mt05{style:'min-width:400px;'}
        .xs-mr3.xs-inline-block.xs-float-right
          - if session[:value] != 'Hide'
            = form_for :save_session, url: public_show_stats_path, method: :post do |f|
              = f.hidden_field :choice, value: 'Hide'
              %button{type:"submit", class:'button xs-float-right button--white button--small'} 
                /= content_tag :span, "", class: "glyphicon glyphicon-heart-empty"
                = "Hide team stats"
          - else
            = form_for :save_session, url: public_show_stats_path, method: :post do |f|
              = f.hidden_field :choice, value: 'Show'
              %button{type:"submit", class:'button xs-float-right button--white button--small'} 
                /= content_tag :span, "", class: "glyphicon glyphicon-heart-empty"
                = "Show team stats"
        .xs-mr3.xs-inline-block.xs-float-right
          - if session[:hide_score_value] == 'ShowR'
            = form_for :hide_score_session, url: public_hide_ratings_path, method: :post do |f|
              = f.hidden_field :score, value: 'HideR'
              %button{type:"submit", class:'button xs-float-right button--white button--small'} 
                /= content_tag :span, "", class: "glyphicon glyphicon-heart-empty"
                = "Hide some ratings"
          - else
            = form_for :hide_score_session, url: public_hide_ratings_path, method: :post do |f|
              = f.hidden_field :score, value: 'ShowR'
              %button{type:"submit", class:'button xs-float-right button--white button--small'} 
                /= content_tag :span, "", class: "glyphicon glyphicon-heart-empty"
                = "Show all ratings"
        .xs-mr3.xs-inline-block.xs-float-right
          %h2.xs-text-3.text-white.xs-mt05 Options:
  .col.xs-col-2.xs-border-bottom.xs-border-left.xs-float-right.xs-fixed.xs-z1.xs-r0{style:'height:70px;background: rgba(0, 0, 0, 0.7);min-width:150px;'}
    .col.xs-col-6.xs-mt2.xs-text-center
      = link_to 'FAQ', public_faq_path, class: 'button button--white button--secondary'
    .col.xs-col-6.xs-mt2.xs-text-center
      = link_to 'Settings', public_settings_path, class: 'button button--white button--secondary'
    
        
      