:css
  .button-user-logged:hover > svg > path {fill:#333 !important}
.clearfix
  .col.xs-col-9.xs-p2.xs-border-bottom.xs-fixed.xs-z1{style:'height:70px;background: rgba(0, 0, 0, 0.4);'}
    .col.xs-col-4{style:'min-width:175px;'}
      = link_to root_path do
        = content_tag :span, "", class: 'link-white bold caps' do
          %p{class: 'xs-text-1 xs-inline-block', style:'letter-spacing: -3px;'}= 'M' 
          %p{class: 'xs-text-2 xs-inline-block'}= 'atch'
          %p{class: 'xs-text-1 xs-inline-block', style:'letter-spacing: -3px'}= 'R'
          %p{class: 'xs-text-2 xs-inline-block'}= 'ating'
    .col.xs-col-2
      / = session.to_hash
      / = link_to 'RESET', public_reset_session_path, method: :post
    - if params[:action] == 'show' 
      .col.xs-col-3.xs-float-right.caps.xs-text-6{style:'/*min-width:400px;*/'}
        .xs-mr3.xs-inline-block.xs-float-right
          - if session[:hide_win_loss] != 'Hide'
            = form_for :hide_win_loss_session, url: public_show_stats_path, method: :post do |f|
              = f.hidden_field :record, value: 'Hide'
              %button{type:"submit", class:'button xs-float-right button--white button--small btn-record xs-mt05'} 
                = content_tag :span, "", class: "img-eye eye-closed logo-small"
                %h3.xs-inline-block.xs-ml05{style:'vertical-align: -2px;'}= '(W-L)'
          - else
            = form_for :hide_win_loss_session, url: public_show_stats_path, method: :post do |f|
              = f.hidden_field :record, value: 'Show'
              %button{type:"submit", class:'button xs-float-right button--white button--small btn-record xs-mt05'} 
                = content_tag :span, "", class: "img-eye eye-open logo-small"
                %h3.xs-inline-block.xs-ml05{style:'vertical-align: -2px;'}= '(W-L)'
    - elsif params[:action] == 'index'
      .col.xs-col-3.xs-float-right.caps.xs-text-6{style:'/*min-width:400px;*/'}
        .xs-mr3.xs-inline-block.xs-float-right.xs-mt05
    - else
      .col.xs-col-3.xs-float-right.caps.xs-text-6{style:'/*min-width:400px;*/;'}
        .xs-mr3.xs-inline-block.xs-float-right.xs-mt05
          = link_to 'Back', session[:my_previous_url], class:'button xs-float-right button--white button--small xs-p1'
  .col.xs-col-3.xs-border-bottom.xs-border-left.xs-float-right.xs-fixed.xs-z1.xs-r0{style:'height:70px;background: rgba(0, 0, 0, 0.7);min-width:150px;'}
    .col.xs-col-12.xs-mt2.xs-text-center
      - if current_user
        = link_to public_settings_path, class:'xs-mr2 button button--white button--secondary button-user-logged' do
          %svg{class:'page-message__icon', style:'height: 17px;border-radius: 50%;margin-bottom: .25rem;', xmlns:"http://www.w3.org/2000/svg", viewBox:"0 0 22 22"}
            %path{d:'M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm3.5-9c.83 0 1.5-.67 1.5-1.5S16.33 8 15.5 8 14 8.67 14 9.5s.67 1.5 1.5 1.5zm-7 0c.83 0 1.5-.67 1.5-1.5S9.33 8 8.5 8 7 8.67 7 9.5 7.67 11 8.5 11zm3.5 6.5c2.33 0 4.31-1.46 5.11-3.5H6.89c.8 2.04 2.78 3.5 5.11 3.5z', fill:'#fff'}
          = 'Settings'
      - else
        = link_to 'Settings', public_settings_path, class: 'xs-mr2 button button--white button--secondary'
      = link_to 'FAQ', public_faq_path, class: 'button button--white button--secondary'
      
    
        
      